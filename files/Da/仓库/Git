【5.0-打开或关闭WIFI】
java
{
final android.net.wifi.WifiManager wifi = (android.net.wifi.WifiManager)getSystemService(Context.WIFI_SERVICE);

if (wifi.isWifiEnabled()) {
    //关
    wifi.setWifiEnabled(false);
} else {
    //开
    wifi.setWifiEnabled(true);
}


//需要添加相关权限
/*
<uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
<uses-permission android:name="android.permission.CHANGE_WIFI_STATE" />
*/

【5.0-设置布局圆角】
java
{
//获取控件对象
final android.widget.LinearLayout xxbj1 = (android.widget.LinearLayout) findViewById(R.id.xxbj1);

android.graphics.drawable.GradientDrawable shape = new android.graphics.drawable.GradientDrawable();
shape.setShape(android.graphics.drawable.GradientDrawable.RECTANGLE);
//设置圆角，可指定某个角的弧度
shape.setCornerRadii(new float[] { 50, 50, 50, 50, 50, 50, 50, 50 });
//设置背景颜色
shape.setColor(android.graphics.Color.parseColor("#ffffff"));
//设置边框大小及边框颜色
shape.setStroke(3, android.graphics.Color.parseColor("#ffffff"));
//设置控件的背景资源
控件对象.setBackgroundDrawable(shape);
}


